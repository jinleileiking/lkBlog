<% form_for(article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label '标题' %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label '内容' %><br />
    <%= f.text_area :body,   :class => "mceEditor"%>
  </p>
  <p>
    <%= f.label  "是否任何人可见:" %>
    <%= f.check_box(:isShare)%>
  </p>
  <p>
    <%= f.submit "提交" %>
  </p>
<% end %>
