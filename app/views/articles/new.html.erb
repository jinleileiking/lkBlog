<div class='post'>
    <div class='body'>
        <h1>写日记</h1>
<%# form_for(@article, :html => { :multipart => true }) do |f| %>
        <% form_for(@article) do |f| %>

            <%= f.error_messages %>
            <p>
                <%= f.label "标题" %><br />
                <%= f.text_field :title %>
            </p>
            <p>
                <%= f.label "内容" %><br />
                <%= f.text_area :body, :class => "mceEditor"%>
            </p>
            <p>
                <%= f.label "上传图片：" %><br />
                <%= f.file_field :photo %>
            </p>
            <p>
            <%= f.label  "是否任何人可见:" %>
            <%= f.check_box(:isShare)%>
            </p>
            <p>
                <%= f.submit '提交' %>
            </p>
        <% end %>
    </div>
</div>