<div class='post'>
    <div class='body'>
        <h1>登录</h1>

        <% form_for @user_session, :url => user_session_path do |f| %>
            <%= f.error_messages %>
            <%= f.label "帐号"%><br />
            <%= f.text_field :login %><br />
            <br />
            <%= f.label "密码" %><br />
            <%= f.password_field :password %><br />
            <br />
            <%= f.check_box :remember_me %><%= f.label "记住我" %><br />
            <br />
            <%= f.submit "登录" %>
        <% end %>
    </div>
</div>