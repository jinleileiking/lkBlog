<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>LkBlog</title>
    <%= stylesheet_link_tag 'style' %>
    <%= include_tiny_mce_if_needed %>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <div id="logo">
          <h1><a href="#">LkBloghome</a></h1>
          <p>By Jinleileiking + AngelLee</p>
        </div>
      </div>
      <!-- end #header -->
      <div id="menu">
        <ul>
          <% if !current_user %>
            <li ><%= link_to "登录", new_user_session_path %></li>
            <li><%= link_to "注册", new_user_path %></li>
          <% else %>
            <li><p><%= h(current_user.login)%> 已登录</p></li>
            <li><%= link_to "注销", user_session_path, :method => :delete%></li>
            <li><%= link_to "我的帐户", user_path(h(current_user.login)) %></li>
            <% if current_user and current_user.isAdmin == true%>
              <li><%= link_to '写日记', new_article_path %></li>
              <li><%= link_to '管理右边栏', pages_path %></li>
            <% end %>
          <% end %>
          <li><%= link_to '返回首页', articles_path %></li>
        </ul>
      </div>
      <!-- end #menu -->
      <div id="page">
        <div id="content">
          <div class="post">
            <p style="color: green"><%= flash[:notice] %></p>
            <%= yield  %>
          </div>
          <div style="clear: both;">&nbsp;</div>
        </div>
        <!-- end #content -->
        <div id="sidebar">
          <% @page_all.each do |page| %>
            <h2><%= h(page.body) %></h2>
            <ul>
              <% page.pagecontents.each do |content| %>
                <li><%= (content.body) %></li>
              <% end %>
            </ul>
          <% end %>
          <h2>读过的书</h2>
          <ul>
            <% @books.each do |book|  %>
              <li>
                <%= link_to(book[:title], book[:href]) %>
              </li>
            <% end %>
          </ul>
          <h2>看过的电影</h2>
          <ul>
            <% @movies.each do |movie|  %>
              <li>
                <%= link_to(movie[:title], movie[:href]) %>
              </li>
            <% end %>
          </ul>
        </div>
        <!-- end #sidebar -->
        <div style="clear: both;">&nbsp;</div>
      </div>
      <!-- end #page -->
    </div>
    <div id="footer-content">
      <div class="column1">
        <p>Jinleileiking powered by AngelLee (The couple loves forever).</p>
      </div>
      <div class="column2">
      </div>
    </div>
    <div id="footer">
      <p> (c) 2010 Jinleileiking. CSS modified from <a href="http://www.freecsstemplates.org/preview/earthlingtwo/">earthlingtwo</a> from <a href="http://www.freecsstemplates.org">www.freecsstemplates.org</a>.</p>
    </div>
    <!-- end #footer -->
  </body>
</html>



